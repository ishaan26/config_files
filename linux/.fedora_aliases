# Fedora stuff
alias update='sudo dnf update && flatpak update -y'
alias cleanup='sudo dnf clean all'

# General
alias myip="ip -4 addr show wlp2s0 | grep -oP '(?<=inet\s)\d+(\.\d+){3}'"

function cf() {
    cd ~/Documents/Github/config_files
    if [[ $1 == "-f"  ]]; then
		git fetch
    elif [[ $1 == "-o" ]]; then
		google-chrome-stable "https://github.com/ishaan26/config_files" > /dev/null 2>&1 &
    fi
}

function pjt() {
    cd ~/Documents/Github/Learning-Projects
    if [[ $1 == "-f"  ]]; then
		git fetch
	elif [[ $1 == "-o" ]]; then
		google-chrome-stable "https://github.com/ishaan26/Learning-Projects" > /dev/null 2>&1 &
    fi
}

function zsh_colors(){
    for i in {0..255}; do print -Pn "%K{$i}  %k%F{$i}${(l:3::0:)i}%f" ${${(M)$((i%6)):#3}:+$'\n'}; done
}

#Git stuff
alias githistory="git log --oneline --graph --decorate --all"
alias kraken='eval "gitkraken --new-window -p \"`pwd`\" -l /dev/null >/dev/null 2>&1 &"'

function gitupload() {

	if [ -n "$1" ]; then
		git add .
		git commit -am "$1"
		git push
	else
		echo "Provide a commit message"
	fi

}

# PDF stuff
function ocrall() {
    for i in ./*.pdf; do
        echo -e "\nRescannig $i"
        ocrmypdf --force-ocr $i $i
    done
}

# Rust Stuff 
function rustfmt() {
    # Format all the rust projects in a directory tree.
    L=$(pwd)
    for location in $(find . -name src); do 
        A=$(realpath $location) 
        cd $A 
        cd .. 
        cargo fmt 
        echo "Formated $(pwd)" 
        cd $L
    done

}

