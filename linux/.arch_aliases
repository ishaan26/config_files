# Ubuntu stuff
function update() {
    echo -e "\n----------- Updating packages ----------------------\n"
    yay
    echo -e "\n----------- Updating cartes --------------------\n"
    cargo install-update -a
    echo -e "\n----------- Updating other stuff------------\n"
    rustup update
    nvm install --lts
    nvm install node
    echo -e "\nDone!"
}

alias myip="ip -4 addr | grep -oP '(?<=inet\s)\d+(\.\d+){3}'"

function zsh_colors(){
    for i in {0..255}; do
        print -Pn "%K{$i}  %k%F{$i}${(l:3::0:)i}%f " ${${(M)$((i%6)):#3}:+$'\n'}
    done
}


function cf() {
    cd ~/Documents/Github/config_files
    if [[ $1 == "-f"  ]]; then
       git fetch
    fi
}

function pjt() {
    cd ~/Documents/Github/Learning
    if [[ $1 == "-f"  ]]; then
        git fetch
    elif [[ $1 == "-rust" ]]; then
        cd ~/Documents/Github/Learning/Languages/Rust
    fi
}

#Git stuff
alias githistory="git log --oneline --graph --decorate --all"
alias kraken='eval "gitkraken --new-window -p \"`pwd`\" -l /dev/null >/dev/null 2>&1 &"'

function gitupload() {

	if [ -n "$1" ]; then
		git add .
		git commit -am "$1"
		git push
	else
		echo "Provide a commit message"
	fi

}

# PDF stuff
function ocrall() {
    for i in ./*.pdf; do
        echo -e "\nRescannig $i"
        ocrmypdf --force-ocr $i $i
    done
}

# Rust Stuff
function rsfa() {
    # Format all the rust projects in a directory tree.
    O=$(pwd)
    for location in $(find . -name src); do
        A=$(realpath $location)
        cd $A
        cd ..
        cargo fmt
        echo "Formated $(pwd)"
        cd $O
    done

}

