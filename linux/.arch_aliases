# Font stuff
NONE='\033[00m'
RED='\033[01;31m'
GREEN='\033[01;32m'
YELLOW='\033[01;33m'
PURPLE='\033[01;35m'
CYAN='\033[01;36m'
WHITE='\033[01;37m'
BOLD='\033[1m'
UNDERLINE='\033[4m'

# Programs stuff
function update() {

    echo -e "\n=> ${BOLD}${GREEN}Updating packages${NONE} \n"
    yay

    echo -e "\n=> ${BOLD}${GREEN}Updating flatpaks${NONE} \n"
    flatpak update -y

    echo -e "\n=> ${BOLD}${GREEN}Updating cartes${NONE} \n"
    cargo install-update -a

    echo -e "\n=> ${BOLD}${GREEN}Updating other stuff${NONE} \n"
    echo -e "=> ${CYAN}Rustup:${NONE}"
    rustup update
    echo -e "\n=> ${CYAN}Node Version Manager:${NONE}"
    nvm install --lts
    nvm install node

    echo -e "\n${BOLD}Done${NONE}!"
}

alias myip="ip -4 addr | grep -oP '(?<=inet\s)\d+(\.\d+){3}'"

function zsh_colors(){
    for i in {0..255}; do
        print -Pn "%K{$i}  %k%F{$i}${(l:3::0:)i}%f " ${${(M)$((i%6)):#3}:+$'\n'}
    done
}


function cf() {
    cd ~/Documents/Github/config_files
    if [[ $1 == "-f"  ]]; then
       git fetch
    fi
}

function pjt() {
    cd ~/Documents/Github/Learning
    if [[ $1 == "-f"  ]]; then
        git fetch
    elif [[ $1 == "-rust" ]]; then
        cd ~/Documents/Github/Learning/Languages/Rust
    fi
}

#Git stuff
alias githistory="git log --oneline --graph --decorate --all"

function gitupload() {

	if [ -n "$1" ]; then
		git add .
		git commit -am "$1"
		git push
	else
		echo "Provide a commit message"
	fi

}

# PDF stuff
function ocrall() {
    for i in ./*.pdf; do
        echo -e "\nRescannig $i"
        ocrmypdf --force-ocr $i $i
    done
}

# Rust Stuff
function rsfa() {
    # Format all the rust projects in a directory tree.
    O=$(pwd)
    for location in $(find . -name src); do
        A=$(realpath $location)
        cd $A
        cd ..
        cargo fmt
        echo "Formated $(pwd)"
        cd $O
    done

}

