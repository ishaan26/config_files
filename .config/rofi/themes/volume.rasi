
configuration {
	font:                      		"GoogleSans Nerd Font 12";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

@import "colors.rasi"

/* ########### */


window {
    background-color:               @background;
    transparency:                   "real";
    border-radius:                  12px;
	width:							400px;
}

prompt {
    enabled: 						true;
	expand: 						true;
    padding:                        10px;
	text-color: 					@accent;
    background-color:               @transparent;
    border:                  		0px 0px 0px 0px;
    border-radius:                  10px;
    border-color:                  	@accent;
}

textbox-prompt-colon {
	expand: 						false;
	str: 							" Volume ";
	text-color: 					@accent;
    background-color:               @background-dark;
    padding:                        10px 10px 0px 10px;
    border-radius:                  10px;
}

inputbar {
	children: 						[ textbox-prompt-colon, prompt ];
    spacing:                        12px;
    text-color:                     @foreground;
    background-color:               @transparent;
    expand:                         false;
    position:                       center;
}

listview {
    columns:						4;
    lines:							1;
    spacing:                        12px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
    background-color:               @transparent;
}

mainbox {
    children:                       [ inputbar, listview ];
    spacing:                        12px;
    margin:                         12px;
    background-color:               @transparent;
}

element {
    background-color:               @background-dark;
    orientation:                    vertical;
    border-radius:                  12px;
}

element-text {
	font:							"GoogleSans Nerd Font 32";
    background-color:               @transparent;
    text-color:                     @foreground;
    expand:                         true;
    horizontal-align:               0.5;
    margin:                         5px 10px 20px 10px;
}

element-icon {
    background-color:               @transparent;
    border-radius:                  12px;
}

element selected {
    background-color:               @background-dark;
    border:                  		2px;
    border-radius:                  12px;
    border-color:                  	@accent;
}
